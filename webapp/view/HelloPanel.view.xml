<mvc:View
    controllerName="com.logali.invoices.controller.HelloPanel"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Panel
        headerText="{i18n>helloPanel}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                text="{i18n>helloButton}"
                press="onShowHello"
                class="sapUiSmallMarginEnd"
            />
            <Button
                text="{i18n>helloDialogBut}"
                press="onOpenDialog"
                class="sapUiSmallMarginEnd"
            />
            <Input
                value="{view>/recipient/name}"
                description="Hello {view>/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <Text
                text="Hello {view>/recipient/name}"
                class="boldElements"
            />
        </content>
    </Panel>

    <core:Fragment
        id="form01"
        fragmentName="com.logali.invoices.fragment.Form01"
        type="XML"
    />
</mvc:View>
