<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {view>/recipient/name}"
    >
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="5rem"
            />
        </content>

        <beginButton>
            <Button
                type="Emphasized"
                text="{i18n>ok}"
                tooltip="{i18n>ok}"
                press="onAction"
                width="4rem"
            />
        </beginButton>

        <endButton>
            <Button
                type="Reject"
                text="{i18n>cancel}"
                tooltip="{i18n>cancel}"
                press="onClose"
                width="4rem"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
